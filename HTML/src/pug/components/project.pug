.root
  .parallax-wrap
    include parallax/dot.pug
  .container
    .floating-title
      +title-main($t.architect_landing.project_title, $t.architect_landing.project_desc)
  .slider-wrap
    .carousel
      .slick-carousel#project_carousel(data-length=projectData.length)
        .props.item-props-first.show-md-up
          div
        each item in projectData
          .item
            +general-card(item.img, item.title, item.desc)
        .props.item-props-last.show-md-up
          div
      |
      |
      button.btn-floating.nav.prev.waves-effect#prev_project
        |
        |
        i.ion-ios-arrow-left
        |
        |
      |
      |
      button.btn-floating.nav.next.waves-effect#next_project
        |
        |
        i.ion-ios-arrow-right
        |
        |
      |
      |
