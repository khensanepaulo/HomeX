.root
  .deco
  .container.fixed-width-md-up
    .wow.fadeInUpShort(data-wow-offset='-10' data-wow-delay='0.2s' data-wow-duration='0.6s')
      +title-main($t.architect_landing.team_title, $t.architect_landing.team_desc)
    .team-wrap
      .row.spacing2.mq-sm-up(data-class="spacing6")
        each item, index in team
          .col-md-4.col-sm-6.col-6
            .wow.fadeInUpShort(data-wow-offset='-10' data-wow-delay=Number(0.2 + (0.1 * index)) + "s" data-wow-duration='0.3s')
              div
                +profile-card(item.photo, item.name, item.title)
